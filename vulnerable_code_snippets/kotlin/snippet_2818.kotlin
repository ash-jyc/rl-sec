import java.io.File

fun main(args: Array<String>) {
    val filePath = args[0]
    val fileContent = readFile(filePath)
    println(fileContent)
}

fun readFile(path: String): String {
    return try {
        File(path).readText()
    } catch (e: Exception) {
        "Error reading file: ${e.message}"
    }
}